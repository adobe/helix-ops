{
  "name": "@adobe/helix-ops",
  "version": "1.4.0",
  "description": "Operational tooling for Project Helix services",
  "bin": {
    "newrelic": "src/newrelic.js",
    "statuspage": "src/statuspage.js"
  },
  "scripts": {
    "test": " nyc --reporter=text --reporter=lcov --check-coverage --branches 85 --statements 95 --lines 95 mocha",
    "test-ci": "nyc --reporter=text --reporter=lcov --check-coverage --branches 85 --statements 95 --lines 95 mocha --reporter xunit --reporter-options output=./junit/test-results.xml && codecov",
    "lint": "./node_modules/.bin/eslint .",
    "semantic-release": "semantic-release",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-ops"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-ops/issues"
  },
  "homepage": "https://github.com/adobe/helix-ops#readme",
  "dependencies": {
    "diff": "4.0.2",
    "fs-extra": "8.1.0",
    "get-stream": "5.1.0",
    "git-log-parser": "1.2.0",
    "request": "2.88.0",
    "request-promise-native": "1.0.8",
    "shelljs": "0.8.3",
    "yargs": "15.1.0"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.0",
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/commit-analyzer": "7.0.0",
    "@semantic-release/git": "8.0.0",
    "@semantic-release/github": "6.0.2",
    "@semantic-release/npm": "6.0.0",
    "@semantic-release/release-notes-generator": "7.3.5",
    "ajv": "6.11.0",
    "codecov": "3.6.4",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-plugin-header": "3.0.0",
    "eslint-plugin-import": "2.20.1",
    "istanbul": "1.1.0-alpha.1",
    "jsdoc-to-markdown": "5.0.3",
    "junit-report-builder": "1.3.3",
    "lint-staged": "10.0.7",
    "lodash": "4.17.15",
    "mocha": "7.0.1",
    "nock": "11.7.2",
    "nyc": "15.0.0",
    "semantic-release": "16.0.4",
    "sinon": "8.1.1"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
