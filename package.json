{
  "name": "@adobe/helix-ops",
  "version": "4.3.5",
  "description": "Operational tooling for Project Helix services",
  "bin": {
    "monitoringSetup": "src/monitoringSetup.js",
    "newrelic": "src/newrelic.js",
    "statuspage": "src/statuspage.js"
  },
  "type": "module",
  "scripts": {
    "test": " c8 mocha",
    "lint": "eslint .",
    "semantic-release": "semantic-release",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-ops"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-ops/issues"
  },
  "homepage": "https://github.com/adobe/helix-ops#readme",
  "mocha": {
    "reporter": "mocha-multi-reporters",
    "reporter-options": "configFile=.mocha-multi.json",
    "require": [
      "test/setup-env.js"
    ]
  },
  "dependencies": {
    "@adobe/fetch": "4.1.9",
    "diff": "7.0.0",
    "fs-extra": "11.2.0",
    "git-log-parser": "1.2.1",
    "shelljs": "0.8.5",
    "stream-to-array": "2.3.0",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "2.0.7",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "c8": "10.1.2",
    "eslint": "8.57.1",
    "events": "3.3.0",
    "husky": "9.1.6",
    "jsdoc-to-markdown": "9.0.1",
    "junit-report-builder": "5.1.1",
    "lint-staged": "15.2.10",
    "mocha": "10.7.3",
    "mocha-multi-reporters": "1.5.1",
    "nock": "13.5.5",
    "semantic-release": "24.1.1",
    "sinon": "19.0.2",
    "yaml": "2.5.1"
  },
  "lint-staged": {
    "*.js": "eslint"
  }
}
